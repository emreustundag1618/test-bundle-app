// This is for SELECT ACCESSORIES section
model Product {
  id             String    @id
  proId          String
  title          String
  price          Float
  productType    String
  quantityNeeded Int
  totalInventory Int
  image          String?
  createdAt      DateTime?
  updatedAt      DateTime?
  variants       Variant[]

  // Define the relationships with Bundle
  bundle   Bundle? @relation(fields: [bundleId], references: [id])
  bundleId String?
}

model Variant {
  id             String    @id
  varId          String
  title          String
  price          Float
  quantityNeeded Int
  inventory      Int
  image          String?
  createdAt      DateTime?
  updatedAt      DateTime?

  // Define the relationship with Product
  // product Product @relation(fields: [productId], references: [id])
  // productId String

  // Define the relationships with Bundle
  product   Product? @relation(fields: [productId], references: [id])
  productId String?
}
