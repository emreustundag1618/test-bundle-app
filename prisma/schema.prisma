// This is for SELECT ACCESSORIES section
model Accessory {
  id String @id
  title String @map("product_title")
  price Float
  productType String
  quantityNeeded Int
  totalInventory Int
  image String @map("featured_image")
  createdAt DateTime?
  updatedAt DateTime?

  // Define the relationships with Bundle
  bundle Bundle? @relation(fields: [bundleId], references: [id])
  bundleId String?
}

model TestModel {
  id String @id
  title String
  slug String
}